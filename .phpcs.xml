<?xml version="1.0"?>
<ruleset name="CoinSub Commerce">
    <description>WordPress Coding Standards for CoinSub Commerce Plugin</description>
    
    <!-- What to scan -->
    <file>.</file>
    
    <!-- Exclude vendor, node_modules, etc. -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>
    <exclude-pattern>*.zip</exclude-pattern>
    
    <!-- Include only PHP files -->
    <arg name="extensions" value="php"/>
    
    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Show colors in output -->
    <arg value="colors"/>
    
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
    
    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Allow short ternary operator -->
        <exclude name="WordPress.PHP.DisallowShortTernary"/>
        
        <!-- Allow inline comments -->
        <exclude name="Squiz.Commenting.InlineComment"/>
    </rule>
    
    <!-- WordPress-Extra (includes WordPress-Core) -->
    <config name="minimum_supported_wp_version" value="5.0"/>
    
    <!-- Set text domain -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array" value="coinsub"/>
        </properties>
    </rule>
    
    <!-- Allow nonce verification without sanitization (WooCommerce pattern) -->
    <rule ref="WordPress.Security.NonceVerification">
        <exclude name="WordPress.Security.ValidatedSanitizedInput"/>
    </rule>
</ruleset>

